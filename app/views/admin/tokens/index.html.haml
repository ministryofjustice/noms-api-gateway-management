%h1 Listing tokens

%table
  %thead
    %tr
      %th Issued at
      %th Requested by
      %th Client name
      %th Fingerprint
      %th Api env
      %th Expires
      %th Contact email
      %th Revoked
      %th
      %th
      %th

  %tbody
    - @tokens.each do |token|
      %tr
        %td= l token.issued_at, format: :long
        %td= token.requested_by
        %td= token.client_name
        %td= token.fingerprint
        %td= token.api_env
        %td= l token.expires, format: :long
        %td= token.contact_email
        %td= token.revoked? ? 'Yes' : 'No'
        %td= link_to 'Show', [:admin, token]
        %td= link_to 'Edit', edit_admin_token_path(token)
        %td= link_to 'Destroy', [:admin, token], :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'Create token', new_admin_token_path
