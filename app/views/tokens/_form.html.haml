= form_for @token do |f|
  - if @token.errors.any?
    #error_explanation
      %h2= "#{pluralize(@token.errors.count, "error")} prohibited this token from being saved:"
      %ul
        - @token.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.text_field :requested_by
  .field
    = f.text_field :client_name
  .field
    = f.text_field :contact_email
  .field
    = f.collection_select :api_env, Token::API_ENVS, :to_s, :to_s
  .field
    = f.label :client_public_key
    = f.file_field :client_public_key
  .field
    = f.label :pgp_key, 'PGP Key (used to encrypt generated token)'
    = f.file_field :pgp_key
  .actions
    = f.submit @token.new_record? ? 'Create' : 'Save'
