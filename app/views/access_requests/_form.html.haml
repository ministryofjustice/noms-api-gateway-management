= form_for @access_request do |f|
  - if @access_request.errors.any?
    #error_explanation
      %h2= "#{pluralize(@access_request.errors.count, "error")} prohibited this access_request from being saved:"
      %ul
        - @access_request.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :email
    = f.text_field :email
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :reason
    = f.text_area :reason
  .actions
    = f.submit 'Save'
